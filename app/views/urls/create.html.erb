<div class="container">
  <div class="row">
    <div class="col m12">
      <div class="card">
        <div class="card-content">
          <div class="row">
            <div class="col m8 offset-m2">
              <span class="card-title">Long URL: <%= link_to @url.long_url %></span>
            </div>
          </div>
          <div class="row">
            <div class="col m8 offset-m2">
              <span class="card-title">Tiny URL: <%= link_to visit_url(@url.token), visit_url(@url.token) %></span>
            </div>
          </div>
          <div class="row">
            <div class="col m2">
              <%= link_to 'ShortenAnother!', root_path, class: 'waves-effect waves-light btn' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>